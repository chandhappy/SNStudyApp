<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/MediumSeaGreen"
    tools:context="com.example.incbasha.snstudyapp.MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/DDCCHHPP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=" DD CCHH PP :"
            android:textColor="@color/GhostWhite"
            android:paddingBottom="2dp"
            android:fontFamily="serif"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/DD"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:hint="DD"
            android:maxLength="2"
            android:background="@drawable/background"
            android:paddingBottom="2dp"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:foregroundTint="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/CCHH"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="4"
            android:maxLength="4"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:hint="CCHH"
            android:background="@drawable/background"
            android:textAlignment="center"

            android:paddingBottom="2dp"
            android:foregroundTint="@color/colorPrimaryDark"
            android:textColor="@color/Black"
            />

        <EditText
            android:id="@+id/PP"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="2"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:hint="PP"
            android:maxLength="2"
            android:paddingBottom="2dp"
            android:background="@drawable/background"
            android:textColor="@color/Black"
            android:foregroundTint="@color/colorPrimaryDark"
            android:textAlignment="center" />
    </android.support.v7.widget.LinearLayoutCompat>

<LinearLayout
    android:layout_width="match_parent"
    android:paddingTop="2dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="1) Age:"
        android:textColor="@color/GhostWhite"
        android:fontFamily="serif"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/TxtAge"
        android:layout_width="80dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number"
        android:hint="AGE"
        android:maxLength="3"
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:textColor="@color/Black"
        android:foregroundTint="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/Age" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="2) Gender:"
            android:textColor="@color/GhostWhite"
            android:fontFamily="serif"
            android:textSize="30sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/GenderMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="true"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"/>
               <!-- android:onClick="onRadioButtonClicked" -->
                />

            <RadioButton android:id="@+id/GenderFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:checked="false"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"/>
              <!--  android:onClick="onRadioButtonClicked"-->
                />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/GhostWhite"
            android:text="3) Highest Level of Education:"
            android:fontFamily="serif"
            android:textSize="30sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/Education1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0. No Education"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />

            <RadioButton android:id="@+id/Education2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Pre-primary"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />
            <RadioButton android:id="@+id/Education3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Primary"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />

            <RadioButton android:id="@+id/Education4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Lower Secondary"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />
            <RadioButton android:id="@+id/Education5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Upper Secondary"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />

            <RadioButton android:id="@+id/Education6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Higher Secondary"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />
            <RadioButton android:id="@+id/Education7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. Bachelor’s degree"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />

            <RadioButton android:id="@+id/Education8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Master’s degree"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />
            <RadioButton android:id="@+id/Education9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8. Doctoral"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />

            <RadioButton android:id="@+id/Education10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9. Not Classified"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:layout_marginTop="5dp"
               />
        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/NextP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next >"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>

