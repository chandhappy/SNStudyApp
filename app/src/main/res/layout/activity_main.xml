<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBlack"
    tools:context="com.example.incbasha.snstudyapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/AddCase"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@mipmap/images"
            android:fontFamily="serif"
            android:paddingLeft="30dp"
            android:text="Add Case"
            android:textAlignment="textStart"
            android:textSize="40dp"
            android:textStyle="bold"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Cases In the Queue  :"
                android:textAlignment="textStart"
                android:textColor="@color/WhiteSmoke"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="@color/WhiteSmoke"
                android:textSize="50dp"
                android:textStyle="bold" />
        </LinearLayout>


        <Button
            android:id="@+id/DataSync"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/cloud"
            android:fontFamily="serif"
            android:paddingLeft="30dp"
            android:text="Upload"
            android:textAlignment="textStart"
            android:textSize="40dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>

</LinearLayout>
